<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinesTrnka.SettingPage"
             Title="SettingPage">
    <VerticalStackLayout Padding="10">
        <Label
            Text="Počet řádků (1 - 40):"
            FontSize="Medium"
            HorizontalOptions="Start" />
        <Entry
            Keyboard="Numeric"
            WidthRequest="30"
            FontSize="Medium"
            Text="{Binding Rows}"
            HorizontalOptions="Start" />
        <Label
            Text="Počet sloupců (1 - 40):"
            FontSize="Medium"
            HorizontalOptions="Start" />
        <Entry
            Keyboard="Numeric"
            WidthRequest="30"
            FontSize="Medium"
            Text="{Binding Columns}"
            HorizontalOptions="Start" />
        <Button
            Text="Uložit a zpět"
            FontSize="Medium"
            Clicked="Button_Clicked"
            Margin="10"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>