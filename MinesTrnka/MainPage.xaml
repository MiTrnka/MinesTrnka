<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MinesTrnka.ViewModels"
             x:Class="MinesTrnka.MainPage"
             x:DataType="viewmodels:BoardViewModel"
             BackgroundColor="Black">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nová hra"
                     Command="{Binding NewGameCommand}"
                     Order="Primary"
                     Priority="0">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FontAwesome"
                                 Glyph="&#xf021;"
                                 Color="White"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Text="Nastavení"
                     Clicked="OnSettingsClicked"
                     Order="Primary"
                     Priority="0">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FontAwesome"
                                 Glyph="&#xf013;"
                                 Color="White"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto,*">
        <Grid ColumnDefinitions="*, Auto" Padding="10,0">
            <Label Text="{Binding StatusText}"
                   FontFamily="FontAwesome"
                   FontSize="Large"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   TextColor="White" />

            <Button Grid.Column="1"
                    Command="{Binding ToggleMarkModeCommand}"
                    FontFamily="FontAwesome"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    WidthRequest="44"
                    HeightRequest="44"
                    Padding="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Text" Value="&#xf1e2;" />
                        <Setter Property="TextColor" Value="White" />
                        <Style.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding OnlyMarked}"
                                         Value="True">
                                <Setter Property="Text" Value="&#xf024;" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <Grid x:Name="MineGrid"
              Grid.Row="1"
              VerticalOptions="Fill"
              HorizontalOptions="Fill" />
    </Grid>

</ContentPage>